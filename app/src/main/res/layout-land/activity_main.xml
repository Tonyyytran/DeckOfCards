<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/colorTable"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/cardButton"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:background="@drawable/back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/lastCardImage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/cardButton"
        style="@style/horizontalPrevCard" />

    <ImageView
        android:id="@+id/secondLastCardImage"
        style="@style/horizontalPrevCard"
        android:layout_above="@id/thirdLastCardImage"
        android:layout_below="@id/lastCardImage"
        android:layout_toRightOf="@id/cardButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/lastCardImage" />

    <ImageView
        android:id="@+id/thirdLastCardImage"
        style="@style/horizontalPrevCard"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/cardButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/cardButton"
        app:layout_constraintStart_toEndOf="@+id/secondLastCardImage" />

    <TextView
        android:id="@+id/countText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="38dp"
        android:text="0/52"
        android:textSize="40sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/resetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/countText"/>


</androidx.constraintlayout.widget.ConstraintLayout>