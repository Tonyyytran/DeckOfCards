<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/colorTable"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/cardButton"
        android:layout_width="match_parent"
        android:layout_marginTop="12dp"
        android:background="@drawable/back"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="425dp" />

    <ImageView
        android:id="@+id/lastCardImage"
        style="@style/previousCardStyle"
        android:src="@drawable/back"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/cardButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/secondLastCardImage"
        style="@style/previousCardStyle"
        android:layout_marginRight="8dp"
        app:layout_constraintLeft_toRightOf="@id/lastCardImage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/cardButton"
        android:src="@drawable/back"
        android:visibility="invisible"
        />

    <ImageView
        android:id="@+id/thirdLastCardImage"
        style="@style/previousCardStyle"
        android:layout_marginRight="8dp"
        app:layout_constraintLeft_toRightOf="@id/secondLastCardImage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/cardButton"
        android:src="@drawable/back"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/countText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0/52"
        android:textSize="40sp"
        android:textColor="@color/colorCount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/thirdLastCardImage"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>